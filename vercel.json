{
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "https://oarai-school-backend-production-513d.up.railway.app/$1"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "https://orai-school.vercel.app/" },
        { "key": "Access-Control-Allow-Credentials", "value": "true" },
        { "key": "Access-Control-Allow-Headers", "value": "Authorization, Content-Type" }
      ]
    }
  ]
}
